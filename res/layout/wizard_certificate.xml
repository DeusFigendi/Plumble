<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NewApi" >

    <TextView
        android:id="@+id/plumbleWizardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/certificateSetup"
        android:fontFamily="sans-serif-light"
        android:textSize="24sp"
        android:textColor="@color/abs__holo_blue_light"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/plumbleWizardDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plumbleWizardTitle"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="@string/certificateSetupDesc" />

    <Button
        android:id="@+id/wizardGenerateCert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plumbleWizardDescription"
        android:layout_centerHorizontal="true"
        android:text="@string/generateCert" />

</RelativeLayout>