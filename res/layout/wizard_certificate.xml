<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NewApi" >

    <TextView
        android:id="@+id/plumbleWizardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/certificateSetup"
        android:fontFamily="sans-serif-light"
        android:textSize="24sp"
        android:textColor="@color/abs__holo_blue_light"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/plumbleWizardDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plumbleWizardTitle"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="@string/certificateSetupDesc" />

    <LinearLayout
        android:id="@+id/wizardControlBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wizardBack"
    	android:showDividers="middle"
    	android:divider="?android:attr/dividerHorizontal"
    	android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">
    
    <Button
        android:id="@+id/wizardBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textColor="@color/abs__holo_blue_light"
        style="?android:attr/borderlessButtonStyle" 
        android:layout_weight="1"/>
    
    <Button
        android:id="@+id/wizardContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textColor="@color/abs__holo_blue_light"
        style="?android:attr/borderlessButtonStyle"
        android:layout_weight="1"/>
        
    </LinearLayout>

    <Button
        android:id="@+id/wizardGenerateCert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plumbleWizardDescription"
        android:layout_centerHorizontal="true"
        android:text="@string/generateCert" />

</RelativeLayout>