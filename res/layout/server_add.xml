<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="300dp"
	android:layout_height="wrap_content"
	android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi" >
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/serverName"
			android:text="@string/serverName"></TextView>

		<EditText
		    android:id="@+id/serverNameEdit"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:inputType="text" >
</EditText>
		<TextView
			android:id="@+id/serverHost"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/serverHost"></TextView>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

			<EditText
			    android:id="@+id/serverHostEdit"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:inputType="textUri" />

			<EditText
			    android:id="@+id/serverPortEdit"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:hint="@string/defaultServerPort"
			    android:inputType="number" >

			</EditText>

		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/serverUsername"
			android:id="@+id/serverUsername"></TextView>
		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/serverUsernameEdit"
			android:inputType="text"></EditText>
	</LinearLayout>
</ScrollView>
