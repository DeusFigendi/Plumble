<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/channel_row_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/channel_row_count"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="10"
            android:textStyle="bold"
            android:textColor="@color/holo_blue_light" />

        <TextView
            android:id="@+id/channel_row_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Channel name"
        	android:padding="4dp" 
            android:textSize="16sp"
            android:fontFamily="sans-serif-light" />

        <ImageView
            android:id="@+id/channel_row_up"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_action_info_light"
            style="@style/Plumble.BorderlessButton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/channel_row_pane"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/push_to_talk_background"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone" >

            <TextView
                android:id="@+id/channel_row_chat"
            	style="@style/Plumble.BorderlessButton"
           	 	android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/channel_user_row_chat"
                android:drawableTop="@drawable/ic_action_chat_dark"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/channel_row_comment"
            	style="@style/Plumble.BorderlessButton"
           	 	android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/channel_user_row_comment"
                android:drawableTop="@drawable/ic_action_comment"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/channel_row_favourite"
            	style="@style/Plumble.BorderlessButton"
           	 	android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/channel_row_favourite"
                android:drawableTop="@drawable/ic_action_favourite_off"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/channel_row_close"
            	style="@style/Plumble.BorderlessButton"
           	 	android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/channel_row_close"
                android:drawableTop="@drawable/ic_action_delete_dark"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:textSize="10sp" />
    </LinearLayout>

</FrameLayout>