<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_background">

    <LinearLayout
        android:id="@+id/channel_row_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="4dp" >

        <TextView
            android:id="@+id/channel_row_count"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="(10)"
            android:textColor="@color/holo_blue_light" />

        <TextView
            android:id="@+id/channel_row_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Channel name"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/channel_row_pane"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/push_to_talk_background"
        android:baselineAligned="false"
        android:orientation="horizontal" >

            <TextView
                android:id="@+id/channel_row_chat"
            	style="@style/Plumble.BorderlessButton"
           	 	android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/channel_user_row_chat"
                android:drawableTop="@drawable/ic_action_chat_dark"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/channel_row_comment"
            	style="@style/Plumble.BorderlessButton"
           	 	android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/channel_user_row_comment"
                android:drawableTop="@drawable/ic_action_comment"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/channel_row_favourite"
            	style="@style/Plumble.BorderlessButton"
           	 	android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/channel_row_favourite"
                android:drawableTop="@drawable/ic_action_favourite_off"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/channel_row_close"
            	style="@style/Plumble.BorderlessButton"
           	 	android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/channel_row_close"
                android:drawableTop="@drawable/ic_action_delete_dark"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:textSize="10sp" />
    </LinearLayout>

</FrameLayout>