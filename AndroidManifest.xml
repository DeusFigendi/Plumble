<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="2" android:versionName="1.01" package="com.morlunk.mumbleclient"
	android:installLocation="auto">
	<uses-sdk android:targetSdkVersion="16" android:minSdkVersion="11" />
	<application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
		<activity android:label="@string/app_name" android:name=".app.ServerList">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".app.Preferences" />
		<activity android:name=".app.ServerInfo" />
		<activity android:name=".app.ChannelList" android:launchMode="singleTask" uiOptions="splitActionBarWhenNarrow"/>
		<activity android:name=".app.ChatActivity" />
		<service android:enabled="true" android:name=".service.MumbleService" />
	</application>
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-feature android:name="android.hardware.microphone" />
</manifest>
